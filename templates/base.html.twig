<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="images/logo/mewsick_logo_black.ico">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>

    <body class="flex flex-col min-h-screen font-['itim'] bg-[#262730]">

    <div class="z-50 bg-[#EFF0D1]">
        <nav class="mb-10 bg-[#262730]">
            <div class="bg-[#262730] w-100 max-h-16 flex justify-between mx-auto px-4">

                <div class="basis-1/3 w-full self-center md:block md:w-auto">
                    {% block nav_buttons %}
                    {% endblock %}
                </div>

                <div>
                    <a href="{{ path(get_route_name('APP_START')) }}">
                        <div class="transition-all duration-700 bg-[#262730] px-3 py-5 rounded-full border-2 border-[#262730] hover:rotate-[30deg] hover:scale-110">
                            <img
                            src="{{ asset('images/logo/mewsick_logo_red.png') }}"
                            class="logo h-14 md:h-16 rotate-[-15deg]"
                            alt="Mewsick logo"
                            />
                        </div>
                    </a>
                </div>

                <div class="basis-1/3 w-full self-center md:block md:w-auto">
                    <ul class="font-medium flex flex-col">
                        <li class="grid">
                            <a
                            href="#"
                            class="
                                transition-all duration-300
                                justify-self-end 
                                text-sm sm:text-base md:text-xl text-[#EFF0D1] font-medium
                                bg-[#77BA99] hover:ring-2 hover:ring-[#77BA99] focus:ring-4 focus:ring-[#77BA99]
                                rounded-full
                                py-2 px-5 sm:px-6 md:px-9
                                "
                            aria-current="page">
                                kitten gallery
                            </a>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </div>

    <main class="flex-grow mb-auto bg-[#EFF0D1]">
        {% block pill %}{% endblock %}

        {% block body %}{% endblock %}
    </main>

    <footer class="bg-[#262730] shadow">
        <div class="w-full mx-auto max-w-screen-xl p-4 md:flex md:items-center md:justify-between">
        <span class="text-sm text-gray-500 sm:text-center">© 2023 <a href="https://flowbite.com/" class="hover:underline">Flowbite™</a>. All Rights Reserved.
        </span>
        <ul class="flex flex-wrap items-center mt-3 text-sm font-medium text-gray-500 sm:mt-0">
            <li>
                <a href="#" class="hover:underline me-4 md:me-6">About</a>
            </li>
            <li>
                <a href="#" class="hover:underline me-4 md:me-6">Privacy Policy</a>
            </li>
            <li>
                <a href="#" class="hover:underline me-4 md:me-6">Licensing</a>
            </li>
            <li>
                <a href="#" class="hover:underline">Contact</a>
            </li>
        </ul>
        </div>
    </footer>

    </body>
</html>
