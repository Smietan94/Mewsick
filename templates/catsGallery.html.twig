{% extends 'base.html.twig' %}

{% block title %}
    Welcome in cats gallery
{% endblock %}

{% block nav_buttons %}
    {% include '_homeButton.html.twig' %}
{% endblock %}

{% block pill %}
    {% include '_pill.html.twig' %}
{% endblock %}

{% block body %}
    <div class="my-12 xl:mt-5 xl:mb-12 px-12 sm:px-20 container mx-auto max-w-screen-lg gap-4 lg:gap-10 
    {% if playlists | length > 2 %}
        grid grid-cols-2 md:grid-cols-3
    {% elseif playlists | length == 2 %}
        grid grid-cols-2
    {% else %}
        grid
    {% endif %}
    ">

        {% for playlist in playlists %}

            <a href="{{ playlist.uri }}" class="element-label cursor-pointer justify-self-center transition hover:scale-110 hover:z-50 hover:rotate-12">
                <div class="element bg-white border shadow transition">
                    <img class="border-4 sm:border-6 md:border-4 lg:border-6 border-white"
                    src="{{ playlist.imgUrl }}"
                    alt="{{ playlist.name }}">
                    <div class="p-2 sm:p-3 md:p-5 lg:p-6 flex justify-center">
                        <p class="font-handwritten text-xl sm:text-2xl md:text-3xl xl:text-4xl">{{ playlist.catName }}</p>
                    </div>
                </div>
            </a>

        {% endfor %}

    </div>
{% endblock %}